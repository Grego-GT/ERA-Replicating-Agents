# Use official Deno image
FROM denoland/deno:1.45.5

# Set working directory
WORKDIR /app

# Copy all necessary files
COPY web ./web
COPY cli.ts ./cli.ts
COPY history.ts ./history.ts
COPY backend ./backend
COPY deno.json ./deno.json

# Copy existing agents directory
COPY agents ./agents

# Ensure agents directory exists with proper permissions
RUN mkdir -p /app/agents && chmod -R 755 /app/agents

# Set working directory to web
WORKDIR /app/web

# Cache dependencies
RUN deno cache server.ts ../cli.ts

# Expose port
EXPOSE 8080

# Run the server with all necessary permissions
CMD ["deno", "run", "--allow-net", "--allow-read", "--allow-write", "--allow-env", "--allow-sys", "--allow-run", "server.ts"]

